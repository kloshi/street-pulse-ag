<!-- SHOW USER PROFILE PAGE -->

<div class="banner201 img201-6">
  <h1>Discover your future neighbourhood!</h1>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">


      <div class="profile_page_infos">

        <div class="user-profile-bar">
          <h1><span>User profile</span></h1>
          <!-- avatar image -->
          <%= cl_image_tag current_user.photo, width: 90, height: 90, crop: :thumb, gravity: :face %>
        </div>

        <p><strong>First name:</strong> <%= current_user.f_name %> </p>
        <p><strong>Last name:</strong> <%= current_user.l_name %> </p>
        <p><strong>Email:</strong> <%= current_user.email %> </p>
        <br>
        <!-- add edit profile button -->
        <%= link_to "Edit profile", edit_user_registration_path(current_user), class: "buttonNoFill", style: "padding: 5px 40px;" %>
        <div class="profile_page_photo" style="background-image: url('<%= current_user.photo %>')"> </div>
      </div>

    </div>
  </div>
</div>
